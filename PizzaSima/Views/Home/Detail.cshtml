@model Pizza

<h2 class="text-center text-light">@Model.Nom</h2>

<div class="row">
    <div class="col-6">
        <img src="@Url.Content("~/PizzaImages/" +Model.ImageUrl)" style="width:500px;"/>

    </div>
    <div class="col-6 text-center">
        <p class="text-light">@Model.Description</p>
        <br>
        <h3 class="text-center bg-light fw-bold rounded">Ingredients</h3>
        <p class="text-success bg-light">  @Model.Ingredients - </p>
         <br>
        <br>
        <br>
        <br>
       
         <h3 class="text-light">@Model.Prix DT</h3>
         <a class="btn btn-success" asp-controller="Home" asp-action="Commande">Commander</a>
    </div>


</div>